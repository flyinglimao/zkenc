{
  "name": "zkenc-js",
  "version": "0.1.0",
  "description": "JavaScript/TypeScript bindings for zkenc witness encryption",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/flyinglimao/zkenc.git",
    "directory": "packages/zkenc-js"
  },
  "homepage": "https://zkenc.limaois.me",
  "bugs": {
    "url": "https://github.com/flyinglimao/zkenc/issues"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./wasm": {
      "types": "./pkg/zkenc_js.d.ts",
      "import": "./pkg/zkenc_js.js"
    }
  },
  "scripts": {
    "build": "wasm-pack build --target bundler --out-dir pkg && rm -f pkg/.gitignore && tsc",
    "build:wasm": "wasm-pack build --target bundler --out-dir pkg && rm -f pkg/.gitignore",
    "build:ts": "tsc",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@types/node": "^20.19.21",
    "typescript": "^5.3.0",
    "vite-plugin-top-level-await": "^1.6.0",
    "vite-plugin-wasm": "^3.5.0",
    "vitest": "^1.6.1",
    "wasm-pack": "^0.13.1"
  },
  "files": [
    "dist",
    "pkg",
    "src"
  ],
  "keywords": [
    "zkenc",
    "witness-encryption",
    "circom",
    "wasm",
    "typescript",
    "zero-knowledge",
    "cryptography"
  ],
  "author": "flyinglimao",
  "license": "MIT OR Apache-2.0",
  "publishConfig": {
    "access": "public"
  }
}
