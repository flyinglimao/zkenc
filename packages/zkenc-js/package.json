{
  "name": "zkenc-js",
  "version": "1.0.0",
  "description": "JavaScript/TypeScript bindings for zkenc witness encryption",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./wasm": {
      "types": "./pkg/zkenc_js.d.ts",
      "import": "./pkg/zkenc_js.js"
    }
  },
  "scripts": {
    "build": "wasm-pack build --target bundler --out-dir pkg && tsc",
    "build:wasm": "wasm-pack build --target bundler --out-dir pkg",
    "build:ts": "tsc",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@types/node": "^20.19.21",
    "typescript": "^5.3.0",
    "vite-plugin-top-level-await": "^1.6.0",
    "vite-plugin-wasm": "^3.5.0",
    "vitest": "^1.6.1",
    "wasm-pack": "^0.12.0"
  },
  "files": [
    "dist",
    "pkg",
    "src"
  ],
  "keywords": [
    "zkenc",
    "witness-encryption",
    "circom",
    "wasm",
    "typescript"
  ],
  "author": "",
  "license": "MIT OR Apache-2.0"
}
